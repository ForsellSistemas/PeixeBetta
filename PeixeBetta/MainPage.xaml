<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeixeBetta.MainPage">

    <NavigationPage.TitleView>
        <Label Text="Peixe Betta" HorizontalOptions="Center" FontSize="Title"/>
    </NavigationPage.TitleView>

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="BackgroundColor" Value="GreenYellow"/>
        </Style>
    </ContentPage.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
    
        <Button   Text="Alimentação" Clicked="Button_Clicked" />
        <Button  Grid.Column="1"  Text="Aquários e Parâmetros" Clicked="Button_Clicked_1" />
        <Button Grid.Row="1" Text="Aquário Comunitário"  />
        <Button Grid.Row="1" Grid.Column="1"  Text="Sexagem" />
    
    </Grid>

</ContentPage>
